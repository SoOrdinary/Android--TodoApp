<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/input_background"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="268dp"
        android:layout_height="400dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_box"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/mono"
                android:text=""
                android:textSize="8sp" />

            <TextView
                android:id="@+id/task_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/mono"
                android:text=""
                android:textSize="24sp" />

            <TextView
                android:id="@+id/task_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:fontFamily="@font/mono"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:id="@+id/task_details"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fontFamily="@font/mono"
                android:text=""
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/task_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/task_due_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingLeft="6dp"
            android:text="2024.11.30  9:30" />

        <ImageView
            android:id="@+id/task_alarm"
            android:layout_width="50dp"
            android:layout_height="47dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/task_alarm" />

        <ImageView
            android:id="@+id/task_edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/task_edit" />
    </LinearLayout>

</LinearLayout>